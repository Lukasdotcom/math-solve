{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist"
  },
  "include": ["./src/**/*"]
}
